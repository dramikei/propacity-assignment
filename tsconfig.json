{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "noEmitHelpers": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "dist/*",
        "*"
      ]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*",
    "*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "detectiveOptions": {
    "ts": {
      "mixedImports": true
    }
  }
}
